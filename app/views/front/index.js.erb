$('dl').append("<%= js_partial('doc_excerpt', :collection => @documents, :as => :document) %>");

<% if params[:page].to_i != @documents.total_count %>
  $('#load-more-docs').attr('href', '?page=<%=params[:page].to_i+1%>&q=<%=params[:q]%>');
  $('#load-more-docs').removeClass('btn-disabled');
  $('#load-more-docs').removeAttr('disabled');
  $('#load-more-docs').html('Load more');
<% else %>
  $('#load-more-docs').remove();
<% end %>
